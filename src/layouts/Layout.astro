---
import '../styles/global.css';

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content="Rit (Maritta Ketnawang) - Video Editor Portfolio" />
    <title>{title} | Rit</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600&family=JetBrains+Mono:wght@400;500&family=Space+Grotesk:wght@500;600;700&display=swap" rel="stylesheet">
  </head>
  <body class="bg-video-bg text-white font-body antialiased">
    <nav class="fixed top-0 left-0 right-0 z-50 bg-video-bg/80 backdrop-blur-md border-b border-video-border">
      <div class="max-w-4xl mx-auto px-6 py-4 flex items-center justify-between">
        <a href="/" class="text-video-accent font-display font-bold text-xl tracking-tight hover:text-white transition-colors">
          Rit
        </a>
        <div class="flex items-center gap-6">
          <a href="/" class="text-sm text-video-muted hover:text-white transition-colors">Home</a>
          <a href="/portfolio" class="text-sm text-video-muted hover:text-white transition-colors">Portfolio</a>
          <a href="/about" class="text-sm text-video-muted hover:text-white transition-colors">About</a>
          <a href="/contact" class="text-sm text-video-muted hover:text-white transition-colors">Contact</a>
        </div>
      </div>
    </nav>

    <main class="pt-20">
      <slot />
    </main>

    <footer class="border-t border-video-border mt-20 py-8">
      <div class="max-w-4xl mx-auto px-6 text-center text-sm text-video-muted">
        <p>© 2026 Maritta Ketnawang (Rit) • Video Editor</p>
      </div>
    </footer>
  </body>
</html>
