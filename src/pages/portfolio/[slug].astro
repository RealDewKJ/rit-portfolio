---
import Layout from '../../layouts/Layout.astro';
import { getCollection } from 'astro:content';

export async function getStaticPaths() {
  const entries = await getCollection('portfolio');
  return entries.map((entry) => ({
    params: { slug: entry.slug },
    props: { entry },
  }));
}

const { entry } = Astro.props;
const { Content } = await entry.render();
---

<Layout title={`${entry.data.title} | Rit`}>
  <div class="max-w-4xl mx-auto px-6 py-12">
    <!-- Timeline indicator -->
    <div class="flex items-center gap-2 text-xs font-mono text-video-accent mb-8">
      <div class="w-2 h-2 bg-video-accent rounded-full"></div>
      <span>● PROJECT</span>
      <span class="text-video-muted">|</span>
      <span>00:00:00:00</span>
    </div>

    <!-- Back button -->
    <a href="/portfolio" class="inline-flex items-center gap-2 text-video-muted hover:text-video-accent transition-colors mb-8">
      <span>←</span>
      <span>Back to Portfolio</span>
    </a>

    <!-- Header -->
    <div class="mb-8">
      <h1 class="text-4xl md:text-5xl font-display font-bold tracking-tight mb-4">
        {entry.data.title}
      </h1>
      <p class="text-xl text-video-muted">
        {entry.data.description}
      </p>
    </div>

    <!-- Thumbnail / Video Embed -->
    {entry.data.thumbnail && (
      <div class="aspect-video bg-video-bg rounded-lg overflow-hidden mb-8">
        {entry.data.youtubeId ? (
          <iframe
            src={`https://www.youtube.com/embed/${entry.data.youtubeId}`}
            title={entry.data.title}
            class="w-full h-full"
            frameborder="0"
            allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
            allowfullscreen
          />
        ) : (
          <img 
            src={entry.data.thumbnail} 
            alt={entry.data.title}
            class="w-full h-full object-cover"
          />
        )}
      </div>
    )}

    <!-- Meta info -->
    <div class="grid grid-cols-1 md:grid-cols-2 gap-4 mb-8">
      <div class="bg-video-surface border border-video-border rounded-lg p-4">
        <h3 class="text-sm font-mono text-video-muted uppercase tracking-wider mb-2">Date</h3>
        <p class="font-display font-semibold">
          {entry.data.date.toLocaleDateString('en-US', { 
            year: 'numeric', 
            month: 'long', 
            day: 'numeric' 
          })}
        </p>
      </div>

      {entry.data.client && (
        <div class="bg-video-surface border border-video-border rounded-lg p-4">
          <h3 class="text-sm font-mono text-video-muted uppercase tracking-wider mb-2">Client</h3>
          <p class="font-display font-semibold">
            {entry.data.client}
          </p>
        </div>
      )}
    </div>

    <!-- Tags -->
    {entry.data.tags && entry.data.tags.length > 0 && (
      <div class="flex flex-wrap gap-2 mb-8">
        {entry.data.tags.map((tag: string) => (
          <span class="px-4 py-2 bg-video-surface border border-video-border rounded-full text-sm">
            {tag}
          </span>
        ))}
      </div>
    )}

    <!-- External Link -->
    {entry.data.link && (
      <div class="mb-8">
        <a 
          href={entry.data.link} 
          target="_blank" 
          rel="noopener noreferrer"
          class="inline-flex items-center gap-2 px-6 py-3 bg-video-accent text-black font-display font-semibold rounded-lg hover:bg-white transition-colors"
        >
          <span>Watch on YouTube</span>
          <span>→</span>
        </a>
      </div>
    )}

    <!-- Content -->
    <div class="prose prose-invert prose-lg max-w-none">
      <Content />
    </div>
  </div>
</Layout>
